{
  "name": "linkedin-learning",
  "scripts": {
    "start": "ts-node-esm index.ts",
    "build": "tsup",
    "build:exe": "tsup && pkg . --public --out-path build"
  },
  "devDependencies": {
    "@types/node": "^20.13.0",
    "pkg": "^5.8.1",
    "tsup": "^8.0.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "docx": "^8.5.0",
    "html-to-md": "^0.8.5",
    "puppeteer-core": "^22.10.0"
  },
  "bin": {
    "llearn": "./dist/index.js"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "targets": [
      "node18-mac-arm64",
      "node18-mac-x64",
      "node18-win-x64"
    ]
  }
